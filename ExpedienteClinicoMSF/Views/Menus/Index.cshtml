@model IEnumerable<ExpedienteClinicoMSF.Models.Menus>

@{
    ViewData["Title"] = "Opciones de menú";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Crear opción de menú</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Opcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenMenu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenMenu.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MenuId"><i class="glyphicon glyphicon-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.MenuId"><i class="glyphicon glyphicon-eye-open"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.MenuId"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
