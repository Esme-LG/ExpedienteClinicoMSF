@model ExpedienteClinicoMSF.Models.Examenes

@{
    ViewData["Title"] = "Exámenes";
}

<h2>Detalle</h2>

<div>
    <h4>Examen</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Examen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Examen)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DescripcionExamen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescripcionExamen)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categoria.Categoria1)
        </dd>
    </dl>
    
    <div>
        <h4>Resultados</h4>
       
        <table class="table">
            <tbody>
                @foreach (var item in Model.ExamenesResultados)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Resultado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorMin) @Html.DisplayFor(modelItem => item.Medida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorMax) @Html.DisplayFor(modelItem => item.Medida)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-controller="ExamenesResultados" asp-action="Create">Agregar resultado</a> |
    <a asp-action="Edit" asp-route-id="@Model.ExamenId">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
