@model ExpedienteClinicoMSF.Models.ExamenesPacientes

@{
    ViewData["Title"] = "Exámenes";
}

<h2>Crear</h2>

<h4>Examen de paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExamenId" class="control-label"></label>
                <select asp-for="ExamenId" class="form-control" asp-items="ViewBag.ExamenId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConsultaId" class="control-label"></label>
                <select asp-for="ConsultaId" class="form-control" asp-items="ViewBag.ConsultaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaRealizacion" class="control-label"></label>
                <input asp-for="FechaRealizacion" class="form-control" />
                <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaLectura" class="control-label"></label>
                <input asp-for="FechaLectura" class="form-control" />
                <span asp-validation-for="FechaLectura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lectura" class="control-label"></label>
                <input asp-for="Lectura" class="form-control" />
                <span asp-validation-for="Lectura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

