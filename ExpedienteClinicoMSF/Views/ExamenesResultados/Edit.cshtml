@model ExpedienteClinicoMSF.Models.ExamenesResultados

@{
    ViewData["Title"] = "Resultados";
}

<h2>Editar</h2>

<h4>Resultados de Exámenes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExamenResultadoId" />
            <div class="form-group">
                <label asp-for="ExamenId" class="control-label"></label>
                <select asp-for="ExamenId" class="form-control" asp-items="ViewBag.ExamenId"></select>
                <span asp-validation-for="ExamenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medida" class="control-label"></label>
                <input asp-for="Medida" class="form-control" />
                <span asp-validation-for="Medida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMin" class="control-label"></label>
                <input asp-for="ValorMin" class="form-control" />
                <span asp-validation-for="ValorMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMax" class="control-label"></label>
                <input asp-for="ValorMax" class="form-control" />
                <span asp-validation-for="ValorMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

