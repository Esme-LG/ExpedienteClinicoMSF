@model ExpedienteClinicoMSF.Models.ConsultasMedicas

@{
    ViewData["Title"] = "Registro de Consulta";

}


@section styles {
    <link href="@Url.Content("~/css/form-sign-up.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/sign-up.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/font-awesome/css/all.css")" rel="stylesheet" />
    <link href="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css")" rel="stylesheet" />
}
<h2>Registrar</h2>

<h4>ConsultasMedicas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group col-md-6">
                <label asp-for="Medico.MedicoId">Medico</label>
                <select asp-for="Medico.MedicoId" class="form-control" asp-items="ViewBag.MedicoId" name="f1-medico"><option value="">Seleccione uno</option></select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Paciente.PacienteId">Paciente</label>
                <select asp-for="Paciente.PacienteId" class="form-control" asp-items="ViewBag.PacienteId" name="f1-pacienteid"><option value="">Seleccione uno</option></select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Sintomas">Sintomas</label>
                <input asp-for="Sintomas" type="text" value="" name="f1-sintomas" class="f1-sintomas form-control" id="f1-sintomas">
                <span asp-validation-for="Sintomas" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="FechaConsulta">Fecha de Consulta</label>
                <div class="input-group date" data-provide="datepicker">
                    <input asp-for="FechaConsulta" type="text" class="form-control" id="f1-fecha-consulta" name="f1-fecha-consulta">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>



        </form>



    </div>



</div>










@section Scripts {
    <script src="~/js/sign-up.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                minView: 2,
                format: 'dd-mm-yyyy HH:ii p',
                startDate: new Date,
                autoclose: true,
            });
        })
    </script>
}